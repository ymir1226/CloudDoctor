page{
  background: #EFEFF4;
  width: 100%;
  height:100%;
}

.container {
  height: 100%;
  padding: 20rpx 0;
  /* background-image: */
}

.productList
{
  width: 90%;
  height: auto;
  align-content: center;
}

.product
{
  height: 350rpx;
  margin: 30rpx 0;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  background-color:#ffffff;
  border-radius: 40rpx;
}

.productImg
{
  height: auto;
  margin:20rpx;
  border-radius:20rpx;
}

.productInfo
{
  width:100%;
  margin: 10px;
  position: relative;
}

.productName
{
  width: 100%;
  display: flex;
  flex-direction: row;
  height: auto;
}

.productNameText
{
  font-size: 40rpx;
  font-weight: bold;
  color:rgba(10, 143, 245,0.75);
}

.productDetail
{
  width: 100%;
  display:-webkit-box;
  -webkit-line-clamp:4;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  word-break:break-all;
  font-size: 25rpx;
  color: #c0c0c0;
  margin: 20rpx 0;
}

.productDetailText
{
  width: 100%;
  height: auto;
  line-height: 1em;
  margin-top: 10rpx;
  font-size: 25rpx;
  color: #c0c0c0;
}

.productPrice
{
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  width: 100%;
  height: auto;
  position: absolute;
  bottom: 10rpx;
}

.price
{
  margin-top: 10rpx;
  font-size: 25rpx;
  font-weight: bolder;
  color: rgb(216, 72, 72);
}

.vipBuyButton, .vipDetailButton
{ 
  border-radius: 20rpx;
  font-size: 20rpx;
  padding: 5rpx 10rpx !important;
  margin: 0 10rpx !important;
  line-height: 2;
}

.vipBuyButton
{
  background-color: rgba(10, 143, 245,0.9);
  color: #ffffff;
}

.vipDetailButton
{
  background-color: rgba(248, 248, 248,0.9);
  color: rgba(0, 0, 0,0.7);
}